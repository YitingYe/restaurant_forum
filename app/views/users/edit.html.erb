<div class="container">
  <div class="row">

    <%= form_for @user do |f| %>
      
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      
      <div class="form-group">
        <%= f.label :intro, "Introduction" %>
        <%= f.text_area :intro, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, "Image" %>
        <%= image_tag @user.avatar, width: '200px' if @user.avatar? %>
        <%= f.file_field :avatar %>
      </div>
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Cancel", user_path(@user), class: "btn btn-warning" %>
    <% end %>
  </div>
</div>