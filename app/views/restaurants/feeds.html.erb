<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presention">
        <%= link_to 'HOME', root_path %>
      </li>
      <li role="presention" class="active">
        <%= link_to 'NEW', feeds_restaurants_path %>
      </li>
    </ul>
  </div>
</div>

<br />

<div class="container">
  <div class="row">

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">最新餐廳</div>
          <div class="panel-body">
            <% @recent_restaurants.each do |restaurant| %>
            <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
            <p><%= restaurant.category.name %></p>
            <p><%= restaurant.description %></p>
            <hr />
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">最新評論</div>
          <div class="panel-body">
          <% @recent_comments.each do |comment| %>
          <h4><%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %></h4>
          <p><%= comment.content %></p>
          <p><%= link_to comment.user.name, user_path(comment.user) %></p>
          <hr />
          <% end %>
          </div>
        </div>
      </div>

  </div>
</div>